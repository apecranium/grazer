@model PostsViewModel
@{
    ViewData["Title"] = "home";
}

@foreach (var post in Model.Posts)
{
    <div class="row mb-5">
        <div class="col-lg-12">
            <h1>@post.Title</h1>
            <p class="text-muted">posted by <a href="#">@post.Author</a> on @post.DatePosted.ToLongDateString().ToLower()</p>
            <hr>

            @Html.Raw(post.BodyContent)
        </div>
    </div>
}

<partial name="_PaginationPartial" for="@Model" />
