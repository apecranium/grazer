@model PostsViewModel
@{
    ViewData["Title"] = "home";
}

@foreach (var post in Model.Posts)
{
    <div class="row mb-5">
        <div class="col-lg-12">
            <h1>@post.Title</h1>
            <p class="text-muted">posted by <a href="#">@post.Author</a> on @post.DatePosted.ToLongDateString().ToLower()</p>
            <hr>

            @Html.Raw(post.BodyContent)
        </div>
    </div>
}

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            <li class="page-item @(i == Model.Page ? "active" : "")">
                <a class="page-link" asp-route-page="@i">@i</a>
            </li>
        }
    </ul>
</nav>
